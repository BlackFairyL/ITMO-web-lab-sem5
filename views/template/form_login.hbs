<script src="JS/login_form.js" type="text/javascript"></script>

<div class="myForm" id="myForm">
    <form id="authform" onsubmit="return false">
      <h3 class="text-center">Форма входа</h3>
      <div >
        <input class="item" type="email" name="email" id="email" placeholder="Email" required>
      </div>
      <div >
          <input class="item" type="password" name="Пароль" minlength="6" id="password" placeholder="Пароль" required>
      </div>
      <div class="error" id="error"> Ошибка авторизации</div>
      <div >
        <button class="create-account" type="submit" id="send">Вход в аккаунт</button>
      </div>
      <div>
      <button class="create-account" type="submit" onclick="closeForm()">Закрыть</button>
      </div>
    </form>
</div>